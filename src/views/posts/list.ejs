<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Social Media - Posts</title>
  <!-- Materialize CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <!-- Google Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <style>
    body { background: #f3f6fa; }
    .brand-logo { font-weight: bold; }
    .custom-nav { background: linear-gradient(90deg, #00bfae 0%, #1976d2 100%); }
    .card-title { color: #1976d2; font-weight: 600; }
    .chip { background: #e0f7fa; color: #1976d2; font-weight: 500; }
    .btn-create {
      background: linear-gradient(90deg, #1976d2 60%, #00bfae 100%);
      color: #fff;
      font-weight: bold;
      margin-bottom: 30px;
      border-radius: 25px;
      box-shadow: 0 2px 8px #1976d2aa;
    }
    .btn-create:hover { background: #00bfae; }
    .card-action .material-icons { vertical-align: middle; }
    .card-action a { margin-left: 8px; }
    .author { color: #555; font-size: 0.95em; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="custom-nav">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo center">Social Media</a>
    </div>
  </nav>

  <div class="container">
    <h4 class="center-align" style="margin-top:30px;">Bienvenido a Social Media</h4>
    <div class="center-align">
      <a href="/posts/new" class="btn btn-create waves-effect waves-light" style="margin-right:10px;">
        <i class="material-icons left">add_circle</i> CREAR NUEVO POST
      </a>
      <a href="/users/new" class="btn btn-create waves-effect waves-light teal accent-4" style="background: linear-gradient(90deg, #00bfae 60%, #1976d2 100%); color: #fff; font-weight: bold; border-radius: 25px; box-shadow: 0 2px 8px #00bfae88;">
        <i class="material-icons left">person_add</i> CREAR USUARIO
      </a>
    </div>
    <div class="row">
      <% if (posts.length === 0) { %>
        <div class="col s12">
          <div class="card-panel yellow lighten-4 center-align">
            <span class="grey-text text-darken-2">No hay posts aún. ¡Crea el primero!</span>
          </div>
        </div>
      <% } %>
      <% posts.forEach(post => { %>
        <div class="col s12 m6 l4">
          <div class="card hoverable">
            <% if (post.imageUrl) { %>
              <div class="card-image" style="height:300px;overflow:hidden;">
                <img src="<%= post.imageUrl %>" alt="Imagen del post" style="width:100%;height:100%;object-fit:cover;object-position:center;">
              </div>
            <% } %>
            <div class="card-content">
              <span class="card-title"><%= post.title %></span>
              <p><%= post.content %></p>
              <% if (post.hashtags && post.hashtags.length > 0) { %>
                <p>
                  <strong>Hashtags:</strong>
                  <% post.hashtags.forEach(tag => { %>
                    <span class="chip">#<%= tag %></span>
                  <% }) %>
                </p>
              <% } %>
            </div>
            <div class="card-action">
              <span class="author">
                <strong>Usuario:</strong>
                <%= post.user && post.user.name ? post.user.name : "Desconocido" %>
              </span>
              <span class="right">
                <a href="/posts/<%= post._id %>/edit" class="btn-flat" title="Editar">
                  <i class="material-icons teal-text">edit</i>
                </a>
                <form action="/posts/<%= post._id %>/delete" method="POST" style="display:inline;">
                  <button type="submit" class="btn-flat" title="Eliminar" onclick="return confirm('¿Eliminar este post?')">
                    <i class="material-icons red-text">delete</i>
                  </button>
                </form>
              </span>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
